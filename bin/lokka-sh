#!/usr/bin/env ruby
$:.unshift File.expand_path('../../lib', __FILE__)
require 'lokka/sh'

puts <<BANNER.gsub("%", "\e[46m \e[0m")

.%%......%%%%%%..%%..%%..%%..%%...%%%%............%%%%...%%..%%.
.%%......%%..%%..%%.%%...%%.%%...%%..%%..........%%......%%..%%.
.%%......%%..%%..%%%%....%%%%....%%%%%%..%%%%%%...%%%%...%%%%%%.
.%%......%%..%%..%%.%%...%%.%%...%%..%%..............%%..%%..%%.
.%%%%%%..%%%%%%..%%..%%..%%..%%..%%..%%...........%%%%...%%..%%.
................................................................
\e[35m#{Lokka::Sh::VERSION.rjust(63, " ")}\e[0m

BANNER

APP_PATH = File.expand_path('./init')
Lokka::Sh::Color.with(:blue) { "require #{APP_PATH}" }
require APP_PATH

Lokka::Sh.start
