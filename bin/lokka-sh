#!/usr/bin/env ruby
$:.unshift File.expand_path(File.dirname(__FILE__) + '/../lib')
require 'lokka-sh'

puts <<BANNER.gsub("%", "\e[46m \e[0m")

.%%......%%%%%%..%%..%%..%%..%%...%%%%............%%%%...%%..%%.
.%%......%%..%%..%%.%%...%%.%%...%%..%%..........%%......%%..%%.
.%%......%%..%%..%%%%....%%%%....%%%%%%..%%%%%%...%%%%...%%%%%%.
.%%......%%..%%..%%.%%...%%.%%...%%..%%..............%%..%%..%%.
.%%%%%%..%%%%%%..%%..%%..%%..%%..%%..%%...........%%%%...%%..%%.
................................................................
\e[35m#{LokkaSh::VERSION.rjust(63, " ")}\e[0m

BANNER

APP_PATH = File.expand_path('./init')
LokkaSh::Color.with(:blue) do
  "require #{APP_PATH}"
end
require APP_PATH

LokkaSh::CLI.run
